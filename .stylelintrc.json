{
  "$schema": "https://json.schemastore.org/stylelintrc",
  "extends": ["stylelint-config-standard"],
  "rules": {
    "color-no-hex": true,
    "declaration-property-value-disallowed-list": {
      "/^(padding|margin|gap|top|right|bottom|left|width|height|min-width|min-height|max-width|max-height)/": [
        "/^[0-9]+(px|rem|em)$/",
        "/^0\\.[0-9]+(px|rem|em)$/"
      ],
      "/^(border-radius)/": [
        "/^[0-9]+(px|rem|em)$/",
        "/^0\\.[0-9]+(px|rem|em)$/",
        "/^9999px$/"
      ],
      "/^(transition|animation-duration)/": [
        "/^[0-9]+(ms|s)$/"
      ]
    },
    "function-disallowed-list": ["rgb", "rgba", "hsl", "hsla"],
    "custom-property-pattern": "^(color|spacing|font|border|shadow|transition|z-index|opacity|line-height|letter-spacing)-",
    "selector-class-pattern": "^ff-[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
    "declaration-empty-line-before": null,
    "custom-property-empty-line-before": null,
    "comment-empty-line-before": null,
    "rule-empty-line-before": [
      "always-multi-line",
      {
        "except": ["first-nested"],
        "ignore": ["after-comment"]
      }
    ]
  }
}
